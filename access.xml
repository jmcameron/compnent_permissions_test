<?xml version="1.0" encoding="utf-8"?>
<access component="com_permtest">
	<section name="component">
		<action name="core.admin" title="Configure Permtest Options"
			description="Permtest core.admin permissions" />

		<action name="core.manage" title="Access Permtest Component"
			description="Permtest core.manage permissions" />

		<action name="core.create" title="Permtest create permission" 
			description="Permtest core.create permissions" />

		<action name="core.delete" title="Permtest delete permission" 
			description="Permtest core.delete permissions" />

		<action name="core.edit" title="Permtest edit permission"
			description="Permtest core.edit permissions" />

		<action name="core.edit.own" title="Permtest edit own permission" 
			description="Permtest core.edit.own permissions" />

		<action name="core.edit.state" title="Permtest edit state permission" 
			description="Permtest core.edit.state permissions" />

		<action name="permtest.default" title="Permtest custom default"
			description="Defaults to system default permissions (denied)" />

		<action name="permtest.custom.author1" title="Permtest custom enable author"
			description="Should default true for author"
			default="com_content:core.create" />

		<action name="permtest.custom.author2" title="Permtest custom enable author (with hint)"
			description="Should default true for author"
			default="com_content:core.create[Author]" />

		<action name="permtest.custom.editor1" title="Permtest custom enable editor"
			description="Should default true for editor"
			default="com_content:core.edit" />

		<action name="permtest.custom.editor2" title="Permtest custom enable editor (with hint)"
			description="Should default true for editor"
			default="com_content:core.edit[Editor]" />

		<action name="permtest.custom.manager1" title="Permtest custom enable manager"
			description="Should default true for manager"
			default="com_content:core.edit.state" />

		<action name="permtest.custom.manager2" title="Permtest custom enable manager (with hint)"
			description="Should default true for manager"
			default="com_content:core.edit.state[Manager]" />

